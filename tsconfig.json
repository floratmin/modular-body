{
  "compilerOptions": {
    "lib": [
      "ESNext",
      "dom"
    ],
    "target": "esnext",
    "module": "esnext",
    "outDir": "dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types"],
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"]
}
